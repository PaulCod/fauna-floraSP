generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

enum Category {
    ANIMAL
    PLANTA
}

model Specie {
    id        String   @id @default(uuid())
    name      String
    details   String
    category  Category
    slug      String   @unique
    imageUrl  String   @map("image_url")
    latitude  Float
    longitude Float
    status    String   @db.VarChar(50)
    createdAt DateTime @default(now()) @map("created_at")

    @@map("species")
}
